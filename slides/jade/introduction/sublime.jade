section
  h2 Highly customizable
  p Default Vs User settings configuration
  p.fragment <b>Use user always!</b>

section
  h2 Project files
  pre
    code.
      { 
        "folders":
        [
          {
            "path": ".",
            "folder_exclude_patterns": ["node_modules"]
          }
        ],
        "settings":
        {
          "tab_size": 2,
          "translate_tabs_to_spaces": true,
          "word_wrap": "true"
        }
      }

section
  h2 Build system
  pre
    code.
      "build_systems" : [
        {
          "name": "parse_slides",
          "working_dir": "$project_path",
          "cmd": ["bin/jade-build", "$file"],
          "selector": "source.jade"
        },
        {
          "name": "compile_LESS",
          "working_dir": "$project_path",
          "cmd": [
            "node_modules/less/bin/lessc", "less/style.less", "generated/assets/css/style.css"
          ],
          "selector": "source.css.less"
        }
      ]

