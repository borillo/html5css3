script
  $('.load-audio').on('click', function () {
    if(!$('audio').attr('src')) {
      $('audio').attr('src', 'assets/audio/Drum_Track.mp3');
      $(this).remove();
    }
  });

  $('.load-video').on('click', function () {
    if(!$('video').attr('src')) {
      $('video').attr('src',
        'http://upload.wikimedia.org/wikipedia/commons/b/b0/Simulation_of_gas_cloud_approaching_the_black_hole_at_the_centre_of_the_Milky_Way.ogv')
      $(this).remove();
    }
  });