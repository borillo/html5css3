  section.browser-support-container
    mixin browserSupport('All', '4+', '5+', '10+', '9.6+')
    h2 Validation CSS
    p <b>:required</b> and <b>:optional</b>
    pre
      code.
        <b>:optional</b> {
          border-color: lightGray;         
        }

        <b>:required</b> {
          border: 2px solid black;         
        }
    style
      .ex-validation-required:optional {
        border-color: lightGray;
      }
      .ex-validation-required:required {
        border: 2px solid black;
      }
    #ex-validation-selectors-1
      form.form-inline
        fieldset
          p
            label.checkbox Required field
            | 
            input.ex-validation-required(type="text", required)
          p
            label Optional field
            | 
            input.ex-validation-required(type="text")
          p
            button.btn(type="submit") Submit
  
  section.browser-support-container
    mixin browserSupport('All', '4+', '5+', '10+', '9.6+')
    h2 Validation CSS
    p <b>:valid</b> and <b>:invalid</b>
