section
  
  section
    mixin browserSupport('All', '4+', '5+', '10+', '9.6+')
    h2 Validation CSS selectors
    p <b>:required</b> and <b>:optional</b>
    pre
      code.
        <b>:optional</b> {
          width: 20%;         
        }

        <b>:required</b>,  :focus {
          width: 50%;          
        }
    #ex-validation-selectors-1
      style
        #ex-validation-selectors-1 :optional {
          width: 20%;
          -webkit-transition: width .2s linear;
          -moz-transition: width .2s linear;
          transition: width .2s linear;
        }
        #ex-validation-selectors-1 :required, #ex-validation-selectors-1 :focus {
          width: 50%;          
        }
      form
        fieldset
          label Required field
          input(type="text", required)
          label Non-required field
          input(type="text")
        button(type="submit") Submit
  
  section
    h2 Validation CSS selectors
    p <b>:valid</b> and <b>:invalid</b>
    pre
      code.
        <b>:invalid</b> {
          border-color: #E9322D;
          box-shadow: 0 0 6px #F8B9B7;
        }
        <b>:valid</b> {
          border-color: #32E92D;
          box-shadow: 0 0 6px #B9F8B7;
        }
    #ex-validation-selectors-2
      style
        #ex-validation-selectors-2 [type="email"]:valid {
          border-color: #32E92D;
          color: #12A90D;
          box-shadow: 0 0 6px #B9F8B7;
        }
        #ex-validation-selectors-2 :invalid {
          border-color: #E9322D;
          box-shadow: 0 0 6px #F8B9B7;
        }
      form
        fieldset
          label Email
          input(type="email")
        button(type="submit") Submit
  
  section
    h2 Validation CSS selectors
    p <b>:in-range</b> and <b>:out-of-range</b>

    #ex-validation-selectors-3
      style
        #ex-validation-selectors-3 :in-range {
          border-color: #32E92D;
          box-shadow: 0 0 6px #B9F8B7;
        }
        #ex-validation-selectors-3 :out-of-range {
          border-color: #E9322D;
          box-shadow: 0 0 6px #F8B9B7;
        }
      form
        fieldset
          label Tickets (max. 10)
          input(type="number", min="1", max="10")
        button(type="submit") Submit

