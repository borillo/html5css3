section.browser-support-container
  mixin browserSupport('4+', '3.5+', '5+', '9+', '10.6+')
  h2 getCurrentPosition
  p Return the current location <b>if the user accepts the request</b>
  pre
    code.
      var getLocation = function(callback) {
        var errorCallback = function(e) {
          e && console.info(e.message);
          // use a default location
          callback({
            coords: { latitude: 0.5, longitude: 0.5 }
          });
        };
        if (navigator.geolocation) {
          navigator.geolocation.getCurrentPosition(getLocation, errorCallback);
        } else {
          errorCallback();
        }
      }

