  h2 File APIs
  p Get file attributes

  pre
    code.
      #{'<input type="file" id="yourFile" name="file">'}
      #{'<ul id="list"></ul>'}

  pre
    code.
      var listener = function (evt) {
        var file = evt.target.files[0];
        $('#list').append('&lt;li>' + file.name + ' - ' + file.size + ' bytes.');
      };

      $('#yourFile').on('change', listener);

