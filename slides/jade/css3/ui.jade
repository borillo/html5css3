  mixin browserSupport('All', '4+', 'All', 'No', 'No')
  h2 resize

  p resize: <b>none | both | horizontal | vertical</b>

  pre
    code.
      div {
        <b>resize: both;
        overflow: scroll;</b>
      }
      textarea {
        <b>resize: none;</b>
      }

  #ex-resizable
    style
      #ex-resizable textarea {
        display: block;
        width: 50%;
        margin-left: auto;
        margin-right: auto;
      }
