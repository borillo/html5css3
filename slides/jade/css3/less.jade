section
  h2 More syntactic sugar

  .row-fluid
    .span6
      p Sass
      pre
        code.
          @import "compass";

          $myBlue = #12F;

          @mixin .my-background($color) {
            background-color: $color + #100;
          }

          .class {
            @include .my-background($myBlue)
            div {
              width: 100px;
            }
          }
    .span6
      p Stylus
      pre
        code.
